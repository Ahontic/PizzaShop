<h2>List of ordered products</h2>


<table class="table table-striped">
  <thead>
    <tr>
      
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Amount</th>
    </tr>
  </thead>
  <tbody>
  	<% total_price = 0 %>
  	<% total_amount = 0 %>
  	<% @items.each do |item| %>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price * item[1].to_i %>
    <% total_amount += item[1].to_i %>
    	<% end %>

    <tr>
      <td></td>
      <td>Total: <%= total_price %></td>
      <td><%= total_amount %></td>
    </tr>    
    
  </tbody>
</table>